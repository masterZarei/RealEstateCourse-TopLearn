@page
@model RealEstateCourse_TopLearn.Pages.Admin.Categories.DetailsModel

<div class="row mt-5">
    <partial name="_Panel" />
    <div class="col-lg-9 col-12">
        <div class="card pb-4 text-center p-2">
            <div class="card-header">
                <h4 class="h4 text-center">جزئیات دسته بندی @Model.CategoryModel.Title</h4>
            </div>
            <form>
                <div class="row p-3">
                    <h6 class="text-right my-3"> نام دسته بندی </h6>
                    <input asp-for="CategoryModel.Title" class="form-control mt-2" disabled>


                    <h6 class="text-right my-3"> توضیحات </h6>
                    <textarea asp-for="CategoryModel.Description" id="discription" cols="15" rows="5" disabled class="form-control"></textarea>
                </div>

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-12">
                        <a asp-page="Edit" asp-route-Id="@Model.CategoryModel.Id" class="btn btn-info btn-block text-white mx-2">ویرایش اطلاعات</a>
                    </div>
                    <div class="col-lg-6 col-md-6 col-12">
                        <a asp-page="Index" class="btn btn-secondary btn-block">بازگشت</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>